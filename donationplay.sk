						message "운영자가 당신이 기부한 %arg 3%원을 기부취소 처리했습니다." to arg 2
						if {donation.%arg 2's uuid%.amount} < 0:
							set {donation.%arg 2's uuid%.amount} to 0
				
			if arg 1 is "set":
				if arg 2 is not set:
					message "플레이어 이름을 넣어주시기 바랍니다."
				else:
					if arg 3 is not set:
						message "금액을 넣어주시기 바랍니다"
					else if arg 3 < 0:
						message "금액이 음수로 입력되었습니다."
